<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sun.pipeline.mybatis.dao.StockBaseDAO">

    <resultMap id="StockBaseResultMap" type="StockBaseDO">
        <id column="id" property="id"/>
        <result column="code" property="code"/>
        <result column="time" property="time"/>
        <result column="price" property="price"/>
        <result column="exright" property="exright"/>
        <result column="hand" property="hand"/>
        <result column="wish" property="wish"/>

    </resultMap>

    <sql id="all_column_list">
                    id,
                    code,
                    time,
                    price,
                    exright,
                    hand,
                    wish
            </sql>

    <!--
		开发负责人：
		功能说明：请说明SQL应用场景
		前台 或 后台：
		频率：请说明qps/tps
		分表数量：多少个分表/单表是否
		是否有缓存：
		缓存失效时间：
		数据量及增长趋势：请说明现有多少条，每天的数据增长量，至少半年的数据预估
	-->
    <insert id="insert" parameterType="StockBaseDO">
        <selectKey keyProperty="id" resultType="java.lang.Long">
            SELECT LAST_INSERT_ID()
        </selectKey>
        insert into stock_base (
        <include refid="all_column_list"/>
        )
        values (
        #{id},
        #{code},
        #{time},
        #{price},
        #{exright},
        #{hand},
        #{wish}
        )
    </insert>

    <!--
		开发负责人：
		功能说明：根据主键查询
		前台 或 后台：
		频率：请说明qps/tps
		分表数量：多少个分表/单表是否
		是否有缓存：
		缓存失效时间：
		数据量及增长趋势：请说明现有多少条，每天的数据增长量，至少半年的数据预估
	-->
    <select id="queryById" resultType="StockBaseDO" parameterType="java.lang.Long">
        select
        <include refid="all_column_list"/>
        from stock_base
        where id = #{id}
    </select>

    <sql id="base_where_clause">
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="code != null">
                and code = #{code}
            </if>
            <if test="time != null">
                and time = #{time}
            </if>
            <if test="price != null">
                and price = #{price}
            </if>
            <if test="exright != null">
                and exright = #{exright}
            </if>
            <if test="hand != null">
                and hand = #{hand}
            </if>
            <if test="wish != null">
                and wish = #{wish}
            </if>
        </where>
    </sql>

    <!--
		开发负责人：
		功能说明：请说明SQL应用场景
		高概率条件：
		前台 或 后台：
		频率：请说明qps/tps
		分表数量：多少个分表/单表是否
		是否有缓存：
		缓存失效时间：
		数据量及增长趋势：请说明现有多少条，每天的数据增长量，至少半年的数据预估
	-->
    <select id="query" resultType="StockBaseDO">
        select
        <include refid="all_column_list"/>
        from stock_base
        <include refid="base_where_clause"/>
    </select>

    <!--
		开发负责人：
		功能说明：请说明SQL应用场景
		高概率条件:
		前台 或 后台：
		频率：请说明qps/tps
		分表数量：多少个分表/单表是否
		是否有缓存：
		缓存失效时间：
		数据量及增长趋势：请说明现有多少条，每天的数据增长量，至少半年的数据预估
	-->
    <select id="count" resultType="java.lang.Integer">
        select count(*) from stock_base
        <include refid="base_where_clause"/>
    </select>

    <!--
		开发负责人：
		功能说明：请说明SQL应用场景
		前台 或 后台：
		频率：请说明qps/tps
		分表数量：多少个分表/单表是否
		是否有缓存：
		缓存失效时间：
		数据量及增长趋势：请说明现有多少条，每天的数据增长量，至少半年的数据预估
	-->
    <update id="update" parameterType="StockBaseDO">
        update stock_base
        <set>
            gmt_modified = now(),
            <if test="id != null">
                id = #{id},
            </if>
            <if test="code != null">
                code = #{code},
            </if>
            <if test="time != null">
                time = #{time},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
            <if test="exright != null">
                exright = #{exright},
            </if>
            <if test="hand != null">
                hand = #{hand},
            </if>
            <if test="wish != null">
                wish = #{wish}
            </if>
        </set>
        where id = #{id}
        <if test="rowVersion !=null ">
            and row_version = #{rowVersion}
        </if>
    </update>

    <update id="clear">
        truncate table stock_code
    </update>
</mapper>